            android:background="@drawable/ic_play_circle_filled_black_24dp"
              android:layout_width="50dp"
            android:layout_margin="10dp"

            android:layout_height="50dp" />
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/date"
